@model Vidly1.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.movies.Name)
        @Html.TextBoxFor(c => c.movies.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.movies.ReleaseDate)
        @Html.TextBoxFor(c => c.movies.ReleaseDate,"{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.movies.GenreId)
        @Html.DropDownListFor(c => c.movies.GenreId, new SelectList(Model.genres, "Id", "Name"), " Select Genres Type", new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.movies.NumbersInStock)
        @Html.TextBoxFor(c => c.movies.NumbersInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.movies.Id)
    <button type="submit" class="btn btn-primary">save</button>

}
